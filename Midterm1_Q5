//Code A
#include <stdio.h> 
#include <stdlib.h> 
int factorial(int n) 
{ 
int X; 
if(n !=1) 
{ 
X = n*factorial(n-1);} 
else 
{ 
X=1;} 
return X; 
} 
int main() { 
int z; 
printf("Enter a positive number : "); 
scanf("%d",&z); 
printf("Factorial of %d : %d\n",z,factorial(z)); // call function return 0; 
}

